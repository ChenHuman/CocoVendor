        android:focusable="false" />

    <TextView
        android:id="@+id/ad_setting_setting_item_tv_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <Button
        android:id="@+id/ad_setting_setting_item_btn_plus"
