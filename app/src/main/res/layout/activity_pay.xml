<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:text="订单编号："
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_view"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.109" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:text="000000000000"
            app:layout_constraintLeft_toRightOf="@+id/message"
            app:layout_constraintTop_toBottomOf="@+id/logo_view" />

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="220dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/wepay_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="37dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额："
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/message"
            android:layout_marginLeft="37dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/CNY"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/moneyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/colorBlue"
            android:textSize="48dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:layout_constraintLeft_toRightOf="@+id/CNY"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintBottom_toBottomOf="@+id/CNY"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/CNY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="¥"
            android:textColor="@color/colorBlue"
            android:textSize="48dp"
            app:layout_constraintLeft_toRightOf="@+id/moneyText"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/number" />

        </android.support.constraint.ConstraintLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tips_view"
            android:layout_width="220dp"
            android:layout_height="87dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/wepay_instruction" />

        <ImageView
            android:id="@+id/qrcode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tips_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:color/transparent" />

    </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_goods"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_category_0" />

        <TextView
            android:id="@+id/textView_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蜗牛一号"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥15.0"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

    <!--<android.support.design.widget.BottomNavigationView-->
    <!--android:id="@+id/navigation"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom"-->
    <!--android:background="?android:attr/windowBackground"-->
    <!--app:menu="@menu/navigation" />-->


</LinearLayout>
