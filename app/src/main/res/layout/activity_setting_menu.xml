<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorTransparencyBlack" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/label_machine_id"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="@string/machine_id"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/label_machine_version"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/machine_version"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="@string/label_ip"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/ip"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorTransparencyBlack">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_settings_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2"
            android:layout_gravity="center" >

            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_system_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#EE82EE"
                    android:text="@string/label_system_setting"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_sheet_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#FF7F50"
                    android:gravity="center"
                    android:text="@string/label_sheet"
                    android:layout_span="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_goods_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#e2a617"
                    android:text="@string/label_goods_test"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_ad_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#0d637f"
                    android:text="@string/label_ad_setting"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_money_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#f12345"
                    android:gravity="center"
                    android:text="@string/label_money_setting"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#45e15f"
                    android:text="@string/label_help"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_span="2"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_sales_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#B8860B"
                    android:gravity="center"
                    android:text="@string/label_sales_setting"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_sales_analyze"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#fe5689"
                    android:text="@string/label_sales_analyze"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_span="3"
                    android:textSize="30sp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_setting_return_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/label_return_sales"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:background="#006400"
            android:layout_gravity="bottom"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/btn_reboot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="#006400"
            android:text="@string/label_reboot"
            android:textColor="@color/colorWhite"
            android:layout_gravity="bottom"
            android:textSize="50sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorTransparencyWhite" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/label_machine_id"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/machine_id"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/label_machine_version"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/machine_version"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/label_ip"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="@string/ip"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
